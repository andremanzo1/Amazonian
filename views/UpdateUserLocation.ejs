 <%-  include("partials/head.ejs")    %> 
  <body>
    <section class="vh-100">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-black">
          <div class="px-5 ms-xl-4">
            <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          </div>

          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
            <form style="width: 23rem;" id="updateLocationForm" autocomplete="off">
              <input name="CustomerID" type="hidden" value="<%=LocationInfo.CustomerID%>">
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Update Location</h3>

              <div class="form-outline mb-4">
                <input type="text" name="Address" id="address" class="form-control form-control-lg" value="<%=LocationInfo.Address%>"/>
                <label class="form-label" for="address">Address</label>
                <span id="AddressError"></span>
              </div>

              <div class="form-outline mb-4">
                <input type="text" name="City" id="city" class="form-control form-control-lg" value="<%=LocationInfo.City%>"/>
                <label class="form-label" for="city">City</label>
                <span id="CityError"></span>
              </div>

              <div class="form-outline mb-4">
                <select name="State" id="state" class="form-control form-control-lg">
                  <% for (let state of States) { 
                    if (state.State) { %>
                    <option value="<%= state.State %>" <%= state.State === LocationInfo.State ? "selected" : "" %>><%= state.State %></option>
                  <% }} %>
                </select>
                <label class="form-label" for="state">State</label>
                <span id="StateError"></span>
              </div>

              <div class="form-outline mb-4">
                <input type="text" name="ZipCode" id="zipCode" class="form-control form-control-lg" value="<%=LocationInfo.ZipCode%>"/>
                <label class="form-label" for="zipCode">Zip Code</label>
                <span id="ZipCodeError"></span>
              </div>

              <h1 id="ValidLocation"></h1>

              <div class="pt-1 mb-4">
                <button type="submit" class="btn btn-info btn-lg btn-block">Save Location</button>
              </div>
            </form>
          </div>
        </div>

        <div class="col-sm-6 px-0 d-none d-sm-block">
          <div id = "map"class="w-100 vh-100" style="object-fit: cover; object-position: left;">
        </div>
      </div>
    </div>
    
  </section>
    <script src="/js/AddLocation.js"></script>

  </body>
  </html>
